<h1>Cookbook Recipes</h1>

<p>
  <%= Time.now.utc.strftime("%I:%M %p")  %> UTC
</p>


<% @recipes.each_with_index do |recipe, index| %>
  <li>
    <%= recipe.name %>: <%= recipe.description %> <%= recipe.rating %>
     <form action="/destroy" method="post">
        <input type="hidden" name="index" value="<%= index %>">
        <button class="btn btn-danger" type="submit" value="Delete">X</button>
      </form>
    <%# <a class="btn btn-secondary btn-lg btn-block bg-danger" href="/destroy">X</a> %>
  </li>
<% end %>

